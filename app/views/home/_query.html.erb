<table class="table table-condensed" style="padding-right:5px">
    <tbody>
    <% if @cast_query != nil %>
    <% @cast_query.each do |cast| %>
        <% cast_id = cast.id %>
        <% cast_total = cast.upvotes.size - cast.downvotes.size %>
        <tr style="border-top-color:#3498db;margin-right:5px">
          <td style="max-width:120px;border-top-color:coral">
            <% if !user_signed_in? %>
                <span class="glyphicon glyphicon-arrow-up"></span>

                  <span class="voteCount adjText
                    <% if cast_total >= 0 %> voteGreen
                    <% else %> voteRed
                    <% end %> <%= cast_total.abs %>" id="total<%= cast_id %>"> <%= cast_total.abs %> </span>

                <span class="glyphicon glyphicon-arrow-down"></span>

            <% elsif current_user.voted_up_on? cast %>
                <button type="button" class="btn btn-success btn-xs" id="upvote<%= cast_id %>" onclick="ajax_voting('up',<%= cast.id %>)">
                  <span class="glyphicon glyphicon-arrow-up"></span>
                </button>

                  <span class="voteCount adjText
                    <% if cast_total >= 0 %> voteGreen
                    <% else %> voteRed
                    <% end %> <%= cast_total.abs %>" id="total<%= cast_id %>"><%= cast_total.abs %></span>

                <button type="button" class="btn btn-xs" id="downvote<%= cast_id %>" onclick="ajax_voting('down',<%= cast.id %>)">
                  <span class="glyphicon glyphicon-arrow-down"></span>
                </button>
            <% elsif current_user.voted_down_on? cast %>
                <button type="button" class="btn btn-xs" id="upvote<%= cast_id %>" onclick="ajax_voting('up',<%= cast.id %>)">
                  <span class="glyphicon glyphicon-arrow-up"></span>
                </button>

                  <span class="voteCount adjText
                    <% if cast_total >= 0 %> voteGreen
                    <% else %> voteRed
                    <% end %> <%= cast_total.abs %>" id="total<%= cast_id %>"><%= cast_total.abs %></span>

                <button type="button" class="btn btn-danger btn-xs" id="downvote<%= cast_id %>" onclick="ajax_voting('down',<%= cast.id %>)">
                  <span class="glyphicon glyphicon-arrow-down"></span>
                </button>
            <% else %>
                <button type="button" class="btn btn-xs" id="upvote<%= cast_id %>" onclick="ajax_voting('up',<%= cast.id %>)">
                  <span class="glyphicon glyphicon-arrow-up"></span>
                </button>

                <span class="voteCount adjText
                  <% if cast_total >= 0 %> voteGreen
                  <% else %> voteRed
                  <% end %> <%= cast_total.abs %>" id="total<%= cast_id %>"><%= cast_total.abs %>
                </span>

                <button type="button" class="btn btn-xs" id="downvote<%= cast_id %>" onclick="ajax_voting('down',<%= cast.id %>)">
                  <span class="glyphicon glyphicon-arrow-down"></span>
                </button>
            <% end %>
            <%= link_to cast, method: "get", :type => "button", :class => "btn btn-xs", style: "color:orange" do %>
                </td>
                <td id="matchTypeCSS" style="width:80%;color:coral;border-top-color:coral">
                  <%= link_to cast, method: "get", :type => "button", :class => "btn btn-xs", :style=>"color:orange" do %> <span id="matchTypeCSS">(<%= cast.match_type %>)</span> <% end %>

                  <%= link_to cast, method: "get", :type => "button", :class => "btn btn-xs", :style=>"color:orange" do %><span id="redTeamCSS"><%= cast.red_team %></span> vs <span id="blueTeamCSS"><%= cast.blue_team %></span><% end %>


                  <%= link_to cast, method: "get", :type => "button", :class => "btn btn-xs" do %><span id="bestOfCSS">[Best of  <%= cast.best_of %>]</span><% end %>


                  <%= link_to cast, method: "get", :type => "button", :class => "btn btn-xs" do %><span id="tournamentNameCSS"><%= cast.tournament_name %></span><% end %>


                  <%= link_to cast, method: "get", :type => "button", :class => "btn btn-xs", :style=>"color:orange" do %><span id="casterCSS"><%= cast.caster %></span><% end %>
                </td>
                </tr>
            <% end %>
    <% end %>
    </tbody>
  </table>
  <% else %>
  No Records Found Please Try Longer Range
  <% end %>










